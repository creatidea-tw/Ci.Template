                        <input value="@Model.RoleCheckList[i].Id" name="RoleCheckList[@i].Id" type="hidden">
                        <label class="checkbox-inline">
                            @Model.RoleCheckList[i].Name
                            <input name="RoleCheckList[@i].Check" type="checkbox" checked="@Model.RoleCheckList[i].IsChecked" value="true">
                        </label>
                </div>*@
            }
        }
    </div>
</div>